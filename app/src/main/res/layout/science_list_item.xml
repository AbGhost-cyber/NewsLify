<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vertical_parent"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:orientation="vertical">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sc_shimmer"
        android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/picture_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="7dp"
            android:elevation="8dp"
            app:cardBackgroundColor="?attr/categoryTextColor"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/science_news_picture"
                    android:layout_width="match_parent"
                    android:background="@color/shimmer_color"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/science_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/rubik_bold"
                    android:layout_alignParentBottom="true"
                    android:background="@color/shimmer_color"
                    android:layout_marginBottom="50dp"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:textColor="?attr/textColorForSportScienceAndBusiness"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/science_publishedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/rubik_bold"
                    android:textColor="?attr/textColorForSportScienceAndBusiness"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:background="@color/shimmer_color"
                    android:textSize="14sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>