<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        app:cardBackgroundColor="?attr/eTAndBreakingNewsBgColor"
        app:cardCornerRadius="9dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/mainBackground"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Featured in Sport News"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/timeInserted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="saved :Few moments ago"
                android:textColor="?attr/savedTimeTxtColor"
                android:textSize="14sp" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/image_parent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="9dp">

            <ImageView
                android:id="@+id/saved_news_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="text" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="127dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/saved_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="2"
                android:textColor="?attr/titleTextColorForEtAndBrkNews"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/saved_news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="2"
                android:textColor="?attr/desColorForBrkNews"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/saved_news_publishedAt_and_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:textColor="?attr/sourceAndPublishedAtColorForEtBrkNews"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>