<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.facebook.shimmer.ShimmerFrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/et_shimmer"
    android:background="@android:color/transparent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_parent"
            android:layout_width="120dp"
            app:cardCornerRadius="9dp"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/entertainment_news_image"
                android:contentDescription="text"
                android:background="@color/shimmer_color"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="127dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="3dp"
                android:id="@+id/entertainment_news_title"
                android:fontFamily="@font/averia_libre"
              android:background="@color/shimmer_color"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:id="@+id/entertainment_news_publishedAt"
                android:fontFamily="sans-serif-black"
               android:background="@color/shimmer_color"
                android:textColor="#2196F3"
                android:layout_marginBottom="2dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/entertainment_news_source"
                android:fontFamily="sans-serif-black"
               android:background="@color/shimmer_color"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="2dp"
                android:textSize="19sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>